
<div class="top-line">
    <h1></h1>
    <p></p>
  </div>

  <div class="container">

      <p id="notice"><%= notice %></p>

      <div id="btn-kanban">
        <%= link_to 'Adicionar', :controller => 'tasks', :action => :new, :id => params[:id] %>
        <%= link_to 'Voltar', sprints_path %>
      </div>

      <div id="kanban">

        <div id="coll_01" class="recebeDrag coll">
          <h1>Back Log</h1>
          <% @coll_01.each do |task| %>
            <div class="item_drag" id="<%= task.id %>">
              <h6 style="background:<%= task.color %>">Prioridade <%= task.priority %></h6>
              <p><%= task.name %></p>
              <p>In√≠cio: <%= task.date_init %><br/>
                 Fim: <%= task.date_end %></p>
              <%= link_to 'Editar', :controller => 'tasks', :action => :edit, :id => task.id %>
              <%= link_to 'Deletar', task, :method => :delete, :data => { :confirm => 'Deseja realmente apagar a tarefa?' } %>
            </div>
          <% end %>
        </div>

        <div id="coll_02" class="recebeDrag coll">
          <h1>In Progress</h1>
